@model YVN.Services.DTOs.PostDTO
<hr />
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary col-md-offset-0">Submit</button>
        <button formaction='javascript:history.go(-1)' class="btn btn-default col-md-offset-0">Cancel</button>
    </div>
</form>