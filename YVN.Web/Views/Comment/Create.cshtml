@model YVN.Services.DTOs.CommentDTO
@{
    ViewData["Title"] = "Submit a Comment";
}

<br />
<h3 class="text-center">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="well">
            <div class="row">
                <div class="col-sm-2">
                    <img src="@Model.UserProfilePicture" class="img-circle pull-left" height="55" width="55" alt="Avatar">
                </div>
                <div class="col-sm-10 text-left">
                    <div class="row"><small>@Model.CreatedOn.ToShortDateString()</small></div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <p>@Model.Content</p>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
            <input asp-for="CreatedOn" class="form-control" type="hidden" value="@Model.CreatedOn" />
            <input asp-for="Content" class="form-control" type="hidden" value="@Model.Content" />
            <input asp-for="UserFullName" class="form-control" type="hidden" value="@Model.UserFullName" />
            <input asp-for="UserProfilePicture" class="form-control" type="hidden" value="@Model.UserProfilePicture" />
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href='javascript:history.go(-1)' class="btn btn-default">Cancel</a>
        </form>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}